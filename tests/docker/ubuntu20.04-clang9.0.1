FROM ubuntu:20.04

LABEL maintainer="av@tarm.io"

RUN apt -y update && \
    apt -y upgrade && \
    apt -y install \
        autoconf \
        automake \
        clang-9 \
        less \
        libc6-dev \
        make \
        nano \
        python \
        sudo \
        wget

ENV BUILD_DIR=/build

# Block device stub (needed for tests)
RUN dd if=/dev/zero of=/loopbackfile.img bs=10M count=1

WORKDIR /source
